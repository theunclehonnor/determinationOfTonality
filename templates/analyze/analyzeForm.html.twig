{% extends 'base.html.twig' %}

{% block title %}Determination Of Tonality / Анализ данных{% endblock %}

{% block body %}
        <div class="d-flex justify-content-center align-items-center mt-5 mb-lg-0 mb-5">
            <div class="col-lg-5 col-9 d-flex flex-column form-security_style p-lg-5 p-4">
                <h3 class="text-center mb-4">Анализ данных</h3>


                <form name="analyze" method="post">
                    <div class="form-group row d-flex align-items-center">
                        <label class="text-center col-sm-4 required" for="analyze_resource_name">Веб-ресурс</label>
                        <div class="col-sm-8">
                            <select id="analyze_resource_name" name="analyze[resource][name]" class="form-control form-control"><option value="М.видео">М.видео</option><option value="Продокторов | врачи">Продокторов | врачи</option></select>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center">
                        <label class="text-center col-sm-4 required" for="analyze_objectInQuestion_link">Ссылка на ресурс</label>
                        <div class="col-sm-8">
                            <input type="text" id="analyze_objectInQuestion_link" name="analyze[objectInQuestion][link]" required="required" inputmode="url" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center">
                        <label class="text-center col-sm-4 required" for="analyze_model_name">Модель</label>
                        <div class="col-sm-8">
                            <select id="analyze_model_name" name="analyze[model][name]" class="form-control form-control"><option value="BagOfWords">BagOfWords</option><option value="Word2Vec">Word2Vec</option></select>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center">
                        <label class="text-center col-sm-4 required" for="analyze_model_dataSet">Корпус с данными</label>
                        <div class="col-sm-8">
                            <select id="analyze_model_dataSet" name="analyze[model][dataSet]" class="form-control form-control"><option value="womenShop">womenShop</option><option value="twitter">twitter</option></select>
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center">
                        <label class="text-center col-sm-4 required" for="analyze_model_classificator">Классификатор</label>
                        <div class="col-sm-8">
                            <select id="analyze_model_classificator" name="analyze[model][classificator]" class="form-control form-control"><option value="MultinomialNB">MultinomialNB</option><option value="RandomForest">RandomForest</option></select>
                        </div>
                    </div>


                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-dark" type="submit">
                            Применить
                        </button>
                    </div>
                    <input type="hidden" id="analyze__token" name="analyze[_token]" value="jF0ulK5Y-r1-ZrVTXw5NJL1khlefyKCkkc7ZfBppAP4"></form>

            </div>
        </div>
{% endblock %}