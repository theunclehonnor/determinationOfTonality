{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
        <div class="row justify-content-center m-0 mt-5 mb-5">
            <div class="col-lg-5 col-8 d-flex flex-column form-security_style p-5">

                <h3 class="text-center mb-4">Регистрация</h3>


                <form name="registration" method="post">
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_username">Email</label>
                        <div class="col-sm-8">
                            <input type="email" id="registration_username" name="registration[username]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_password_first">Пароль</label>
                        <div class="col-sm-8">
                            <input type="password" id="registration_password_first" name="registration[password][first]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_password_second">Повторите пароль</label>
                        <div class="col-sm-8">
                            <input type="password" id="registration_password_second" name="registration[password][second]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_surname">Фамилия</label>
                        <div class="col-sm-8">
                            <input type="text" id="registration_surname" name="registration[surname]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_name">Имя</label>
                        <div class="col-sm-8">
                            <input type="text" id="registration_name" name="registration[name]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_patronymic">Отчество</label>
                        <div class="col-sm-8">
                            <input type="text" id="registration_patronymic" name="registration[patronymic]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="text-center col-sm-4" for="registration_nameCompany">Название компании</label>
                        <div class="col-sm-8">
                            <input type="text" id="registration_nameCompany" name="registration[nameCompany]" class="form-control form-control">
                        </div>
                    </div>
                    <div class="form-group row d-flex justify-content-center">
                        <div class="form-check">        <input type="radio" id="registration_agreeTerms" name="registration[agreeTerms]" onmousedown="this.isChecked=this.checked" onclick="this.checked=!this.isChecked;" style="cursor: pointer;" class="form-check-input" value="1">
                            <label class="form-check-label" for="registration_agreeTerms">Согласие на обработку персональных данных</label></div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-dark" type="submit">
                            Зарегистрироваться
                        </button>
                    </div>
                    <input type="hidden" id="registration__token" name="registration[_token]" value="5BgJ4cRf4Hniojc5mhPAHtrHkVJbd76Myw2GRDjzeA8"></form>

            </div>
        </div>
{% endblock %}