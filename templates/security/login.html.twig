{% extends 'base.html.twig' %}

{% block title %}Авторизация/StudyOn{% endblock %}

{% block body %}
        <div class="d-flex justify-content-center align-items-center mt-5 mb-lg-0 mb-5">
            <div class="col-lg-4 col-9 d-flex flex-column form-security_style p-5">
                <h3 class="text-center mb-4">Авторизация</h3>

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger" id="errors">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}


                    <div class="form-group row">
                        <label for="inputEmail" class="text-center col-sm-2">Email</label>
                        <div class="col-sm-10">
                            <input
                                    type="email"
                                    value="{{ last_username }}"
                                    name="email" id="inputEmail"
                                    class="form-control"
                                    required autofocus
                            />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="text-center col-sm-2">Пароль</label>
                        <div class="col-sm-10">
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                         </div>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="d-flex justify-content-center mb-4">
                        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                        <label for="remember_me" class="m-0 ml-2">Запомнить меня</label>
                    </div>

                    <div class="d-flex w-100 justify-content-center">
                        <button class="btn btn-outline-dark pl-5 pr-5" type="submit">
                            Войти
                        </button>
                    </div>
                    <div class="d-flex w-100 justify-content-center mt-2">
                        <a href="{{ path('app_register') }}">Регистрация</a>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}
